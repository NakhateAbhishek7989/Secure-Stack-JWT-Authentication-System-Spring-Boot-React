package com.org.jwt.controller;

import java.util.HashMap;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.HttpStatusCode;
import org.springframework.http.ResponseEntity;
import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.org.jwt.config.JwtUtil;
import com.org.jwt.model.User;
import com.org.jwt.service.UserService;


@RestController
@RequestMapping("/api/auth")
@CrossOrigin("*")
public class UserController {
	
	@Autowired
	private UserService userService;
	
	private BCryptPasswordEncoder passwordEncoder = new BCryptPasswordEncoder();
	
	@Autowired
	private JwtUtil jwtUtil;
	
	@GetMapping("/user")	
	public String getUser()
	{
		System.out.println("THis is User function");
		return "Hello";
	}
	
	@PostMapping("/register")
	public User saveUserDetails(@RequestBody User user)
	{
		user.setRole("USER");
		return userService.saveUser(user);
	}
	
	
	
	@PostMapping("/login")
	public ResponseEntity<?> login(@RequestBody User request)
	{
		User user = userService.findByEmail(request.getEmail());
		
		if(user == null || !passwordEncoder.matches(request.getPassword(), user.getPassword()))
		{
			return ResponseEntity.status(HttpStatus.UNAUTHORIZED)
					.body(Map.of("error","Invalid Email Or Password"));
		}
		
		String token = jwtUtil.generateToken(user.getEmail(),user.getRole());
		
		Map<String, Object> response = new HashMap<>();
		
		response.put("Message","Login Successful");
		response.put("token", token);
		response.put("user", Map.of(
				"name", user.getName(),
				"email",user.getEmail())
				"role", user.getRole());
		
		return ResponseEntity.ok(response);
	}
	
}

















